# Configuración general
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# WhatsApp Web
WHATSAPP_CLIENT_ID=asistente-ventas
WHATSAPP_HEADLESS=true
WHATSAPP_MULTI_DEVICE=true

# Ollama
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_TIMEOUT=60000

# Google Sheets
GOOGLE_SHEETS_ID=
GOOGLE_SHEETS_CREDENTIALS_PATH=./credentials.json
GOOGLE_SHEETS_TOKEN_PATH=./token.json

# Caché
CACHE_DEFAULT_STRATEGY=memory
CACHE_MEMORY_ENABLED=true
CACHE_MEMORY_MAX_SIZE=1000
CACHE_MEMORY_TTL=3600000
CACHE_DISK_ENABLED=false
CACHE_DISK_DIRECTORY=./cache
CACHE_DISK_TTL=86400000
CACHE_KEY_PREFIX=cache:

# Sistema de monitoreo
MONITORING_METRICS_INTERVAL=60000
MONITORING_METRICS_DIR=./data/metrics
MONITORING_MAX_METRICS_FILES=1440
MONITORING_THRESHOLD_CPU=80
MONITORING_THRESHOLD_MEMORY=80
MONITORING_THRESHOLD_RESPONSE_TIME=5000
MONITORING_THRESHOLD_ERROR_RATE=5
MONITORING_THRESHOLD_QUEUE_SIZE=100
MONITORING_ENABLE_ALERTS=true
MONITORING_ENABLE_METRICS_LOGGING=true

# Seguridad
SECURITY_KEYS_DIR=./data/keys
SECURITY_MASTER_KEY_FILE=master.key
SECURITY_MASTER_PASSWORD=
SECURITY_MASTER_SALT=asistente-ventas-whatsapp
SECURITY_MASTER_ITERATIONS=100000
SECURITY_MASTER_DIGEST=sha512

# Autenticación
AUTH_DIR=./data/auth
AUTH_USERS_FILE=users.json
AUTH_TOKEN_EXPIRATION=3600
AUTH_APP_NAME=Asistente Ventas WhatsApp
AUTH_CODE_LENGTH=6
AUTH_VERIFY_WINDOW=30

# Respaldos
BACKUP_DIR=./data/backups
BACKUP_INTERVAL=86400000
BACKUP_MAX_COUNT=7
BACKUP_ENCRYPT=true
BACKUP_COMPRESS=true

# Detector de asistencia humana
HUMAN_ASSISTANCE_TRAINING_DATA_PATH=./data/human-assistance-training.json
HUMAN_ASSISTANCE_SCORE_THRESHOLD=0.6
HUMAN_ASSISTANCE_ENABLE_LEARNING=true

# Base de datos
DB_PATH=./database.sqlite
